<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="student.sdu.hearingscreening.activities.VolumeTestActivity">

    <Spinner
        android:id="@+id/spn_freqpicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/tv_freqpicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="FREQ PICKER"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btn_playmax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spn_freqpicker"
        android:layout_marginTop="40dp"
        android:text="PLAY AT MAX" />

    <EditText
        android:id="@+id/et_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_playmax"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Set max db"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_inputdb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_max"
        android:layout_below="@+id/et_max"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="Play at input DB"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_playat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/et_inputdb"
        android:layout_toEndOf="@+id/et_inputdb"
        android:text="PLAY" />
</RelativeLayout>
